<?xml version="1.0" encoding="UTF-8" ?>
<server description="${env.SERVER_DESC}">

    <!-- Enable features -->
    <featureManager>
        <feature>microProfile-3.2</feature>
        <feature>ejbLite-3.2</feature>
        <feature>jndi-1.0</feature>
        <feature>jpa-2.2</feature>
        <feature>servlet-4.0</feature>
        <feature>localConnector-1.0</feature>
        <feature>mpReactiveMessaging-1.0</feature>
        <feature>mpContextPropagation-1.0</feature>
        <feature>beanValidation-2.0</feature>
    </featureManager>

    <httpEndpoint id="defaultHttpEndpoint" host="*" httpPort="9080" httpsPort="9443"/>

    <library id="H2JDBCLib">
        <fileset dir="${server.config.dir}"/>
    </library>

    <dataSource id="orderServiceDB" jndiName="jdbc/order">
        <jdbcDriver libraryRef="H2JDBCLib"/>
        <properties
                URL="jdbc:h2:tcp://localhost/./orderService;MODE=MSSQLServer"
                user="sa"
                password="sa"
        />
    </dataSource>

    <!-- Automatically expand WAR files and EAR files -->
    <applicationManager autoExpand="true"/>
    <applicationMonitor dropins="dropins" dropinsEnabled="true" pollingRate="500ms" updateTrigger="polled"/>

    <webApplication contextRoot="/" location="order-service.war"/>

</server>
